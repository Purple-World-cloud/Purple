<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Tangerine">
<div class="container">
	<div class="row">
		<div class="col-6">

			<div class="insta-post">

				<%= image_tag @post.image.url, width:"360px", class: "img img-fluid" if @post.image.present? %>

			</div>

		</div>
		<div class="col-4">
			<div class="post-meta">
				<%= link_to image_tag(@post.account.image.url, class: "img-rounded"), show_path(@post.account.username) %>
					<%= link_to @post.account.username, show_path(@post.account.username), class: "text-black" %>
			</div>

			<div class="post-details">

				<div class="post-actions">
					<%= link_to like_post_path(@post), class: "like-btn", method: :put, remote: :true do %>
						<button type="button" class="btn btn-info" aria-label="right Align">
							<span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
						</button>

						<% end %>
				</div>
				<p class="likes-count">
					<%= @post.get_upvotes.size %>Likes</p>
				<strong>
					<%= link_to @post.account.username, show_path(@post.account.username), class: "text-black" %>
				</strong>
				<p class="w3-tangerine">
					<%= @post.description %>
						<p>

							<p class="text-muted">
								<%= time_ago_in_words @post.created_at %> ago
									<p>

										<%= render "posts/comments", post: @post %>

											<div class="comment-box">

												<%= form_for @comment do |f| %>
<%= f.hidden_field :post_id, value: @post.id %>
<div class="input-group">
<%= f.text_field :comment, placeholder: "Shoot comments here...", class: "form-control" %>
<span class="input-group-btn">
<%= f.submit "Shoot", class: "btn btn-default float-left" %>
</span>
</div>

<% end %>
</div>
</div>
</div>
</div>
</div>