<% @follower_suggestions.each do |account| %>
	<div class="recommened-follower">
<center>		
<%= link_to image_tag(account.image.url, class: "imgg-rounded"), show_path(account.username) if account.image.present? %>
<center>
<%= form_tag follow_account_path, method: :post do %>
<%= hidden_field_tag :follow_id, account.id %>
<%= submit_tag "Admire", class: "btn btn-info" %>
<% end %>

					
<%= link_to account.username, show_path(account.username), class: "text-black" %>
	<h6><%= account.created_at > 7.days.ago ? "New to purple" : "Purple User" %></h6>					
</div>

	<% end %>